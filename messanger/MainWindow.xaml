<Window x:Class="messanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:messanger"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="400"
        ResizeMode="NoResize" Closed="Window_Closed">
    <Grid>
        <TextBox x:Name="IP" HorizontalAlignment="Center" Margin="0,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="34" FontSize="18" TextAlignment="Center"/>
        <TextBox x:Name="name" HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="31" TextAlignment="Center" FontSize="18"/>
        <Button Content="Создать новый сервер" HorizontalAlignment="Center" Margin="0,138,0,0" VerticalAlignment="Top" Width="221" Height="38" FontSize="15" Click="Button_Click"/>
        <Button Content="Присоединиться к серверу" HorizontalAlignment="Center" Margin="0,181,0,0" VerticalAlignment="Top" Height="44" Width="221" FontSize="15" Click="Button_Click_1"/>
        <Label Content="Имя пользователя" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" Width="188" HorizontalContentAlignment="Center" FontSize="16"/>
        <Label Content="IP, к которому необходимо подключиться" HorizontalAlignment="Center" Margin="0,248,0,0" VerticalAlignment="Top" FontSize="16"/>
    </Grid>
</Window>
